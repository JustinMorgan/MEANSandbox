$blue = #00b7ff
$fontsize = 14px

link(fontsize = $fontsize)
  text-decoration: none
  background-color: transparent
  border: none
  color: $blue
  cursor: pointer
  font-size: fontsize !important

body
  padding: 50px
  font: $fontsize "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: $blue

[ng-cloak], .ng-cloak
  display: none !important

section
  ul
    display: table
  li
    display: table-row
    &>*
      display: table-cell
      padding-right: 5px
    &:first-child
      text-transform: uppercase
      font-weight: bold
  a, [type="submit"]
    link()
    
nav
  a
    link(18px)
  li
    display: inline-block
    padding-right: 10px